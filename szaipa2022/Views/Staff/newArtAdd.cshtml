<style>
    .layui-upload-drag {
        width: 100%;
        min-height: 22vh;
    }

    .allpadding {
        /* 把原本layui的padding补回去 */
        padding: 10px;
    }

    .icontouxiang {
        height: 20vh;
        width: inherit;
        background: url('../../content/icon/icontouxiang.svg');
        background-position: center center;
        background-repeat: no-repeat;
        background-size: contain;
    }

    .remind {
        padding-top: 1em;
        font-size: .9rem;
        text-align: center;
        color: #484848;
    }

    .layui-input-block {
        margin-left: 0;
    }

    .layui-form-label {
        padding: 9px 1em 0 0;
    }

    .layui-form label,
    .layui-form input {
        font-size: .9rem;
    }

    #Color1,
    #Color2 {
        width: 20%;
        outline: none;
        border: none;
    }

    .layui-form-item {
        margin-bottom: 3%;
    }

    .layui-form-radio * {
        font-size: .9rem;
    }

    textarea {
        width: 100%;
    }

    input,
    textarea {
        padding: .5em .5em .5em .5em !important;
    }

    .layui-btn {
        font-size: .9rem;
    }

    ::placeholder {
        font-size: .9rem;
    }






    #Color1,
    #Color2 {
        all: inherit;
        width: 20%;
        border: none;
        outline: none;
        box-shadow: none;
        margin: 0;
        height: 3vh;

        position: absolute;
        left: 0;
    }

    #Color2 {
        top: 3.5vh;
    }

    #hexColor1,
    #hexColor2 {
        position: absolute;
        width: 40%;
        height: 3vh;
        left: 21%;
        font-size: .9rem;
    }

    #hexColor1 {
        top: 0;
    }

    #hexColor2 {
        top: 3.5vh;
    }





    #gradient-preview {
        width: 35%;
        height: 6.5vh;

        position: absolute;
        right: 0;
        top: 0;
    }



    #event-container .layui-input {
        display: initial;
    }

    .event-row {
        margin-bottom: 1%;
    }

    .year-input {
        width: 30%;
        margin-right: 2%;
    }

    .event-input {
        width: 67%;
    }

    .add-button,
    .reduce-button {
        all: initial;
        cursor: pointer;
    }

    #event-container .event-row {
        display: flex;
    }

    .shijian {
        display: block;
        outline: none;
        border: 1px solid #ededed;
        width: 68%;
        padding-left: .5em;
        padding-top: .6em;
        min-height: 7em;
        font-size: .9rem;
    }

    .add {
        background-image: url('../../content/icon/tianjia.svg');
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center center;
        width: 2vw;
        height: 2vw;
        display: block;
        position: absolute;
        bottom: 0%;
        right: -2%;
        transform: translatex(100%);
    }

    .reduce {
        background-image: url('../../content/icon/jianshao.svg');
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center center;
        width: 2vw;
        height: 2vw;
        display: block;
        position: absolute;
        bottom: 0%;
        right: -10%;
        transform: translatex(100%);
    }
</style>

