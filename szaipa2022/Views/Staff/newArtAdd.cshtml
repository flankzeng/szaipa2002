<script>

    var upload = layui.upload; //得到 upload 对象
    upload.render({
        elem: '#uploadDemo'
        , url: '/Staff/TempImgSave/' //改成您自己的上传接口
        , done: function (res) {

            layer.msg('上传成功');
            layui.$('#uploadDemoView').removeClass('icontouxiang').find('img').attr('src', "/Content/TempFile/" + res.files.file);
            console.log(res)
        }
        , before: function () {
            layer.msg('上传中', { icon: 16, time: 0 });
        }
    });


    upload.render({
        elem: '#ID-upload-demo-btn-2',
        url: '/Staff/TempImgSave/', // 实际使用时改成您自己的上传接口即可。
        multiple: true,
        before: function (obj) {
            // 预读本地文件示例，不支持ie8
            obj.preview(function (index, file, result) {
                $('#upload-demo-preview').append('<img src="' + result + '" alt="' + file.name + '" style="width: 90px; height: 90px;">')
                console.log(index);
                console.log(file);
                console.log(result)
            });
        }, done: function (res) {
            console.log(2);
            layer.msg('上传成功');
        }
    });

    // 艺术家首页色值

    function updateGradient() {
        const color1 = $('#color1').val();
        const color2 = $('#color2').val();
        $('#gradient-preview').css('background', `linear-gradient(to bottom, ${color1}, ${color2})`);
    }

    // Initialize gradient
    updateGradient();

    // Event listener for color pickers
    $('#color1, #color2').on('input', function () {
        const hexColorId = `#hex${this.id.charAt(0).toUpperCase() + this.id.slice(1)}`;
        $(hexColorId).val($(this).val());
        updateGradient();
    });

    // Event listener for text inputs
    $('#hexColor1, #hexColor2').on('input', function () {
        const colorId = `#${this.id.slice(3).toLowerCase()}`;
        $(colorId).val($(this).val());
        updateGradient();
    });

    // 年表
    $(function () {
        function addEventRow() {
            const newRow = $('<div class="event-row relative">');
            newRow.append('<input type="number" name="DeedsYear" placeholder="请输入年份" class="layui-input year-input">');
            newRow.append('<textarea name="DeedsThings" placeholder="请输入事件" class="shijian"></textarea>');
            newRow.append('<button class="add-button"><i class="add"></i></button>');
            newRow.append('<button class="reduce-button"><i class="reduce"></i></button>');
            $('#event-container').append(newRow);
        }

        // Initialize first row
        addEventRow();

        $('#event-container').on('click', '.add-button', function () {
            // Remove '+' and '-' buttons from the last row
            $('.event-row:last .add-button').remove();
            $('.event-row:last .reduce-button').remove();
            // Add new row
            addEventRow();
        });

        $('#event-container').on('click', '.reduce-button', function () {
            // Check if more than one row exists
            if ($('.event-row').length > 1) {
                // Remove the last row
                $('.event-row:last').remove();
                // Add '+' and '-' buttons back to the new last row
                $('.event-row:last').append('<button class="add-button"><i class="add"></i></button>');
                $('.event-row:last').append('<button class="reduce-button"><i class="reduce"></i></button>');
            }
        });
    });



</script>