
@{
    ViewBag.Title = "PasswordChange";
    Layout = "~/Views/Shared/Staff_Layout.cshtml";
}

<div class="layui-container">
    <div class="layui-row layui-col-space30">
        <div class="layui-col-md-offset4 layui-col-md4">
            <fieldset class="layui-field-title" style="margin-top: 10px;">
                <legend>修改密码</legend>
            </fieldset>
            <form class="layui-form" action="PasswordChange" method="post">
                <div class="layui-form-item">
                    <label class="layui-form-label">原密码</label>
                    <div class="layui-input-inline">
                        <input type="password" name="password" required lay-verify="required" placeholder="请输入密码" autocomplete="off" class="layui-input">
                    </div>
                    <div class="layui-form-mid layui-word-aux">原来密码</div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">新密码</label>
                    <div class="layui-input-inline">
                        <input type="password" name="RePassword" required lay-verify="required" placeholder="请输入密码" autocomplete="off" class="layui-input">
                    </div>
                    <div class="layui-form-mid layui-word-aux">新密码</div>
                </div>
                <div class="layui-form-item">
                    <label class="layui-form-label">新密码</label>
                    <div class="layui-input-inline">
                        <input type="password" name="RePassword2" required lay-verify="required" placeholder="请输入密码" autocomplete="off" class="layui-input">
                    </div>
                    <div class="layui-form-mid layui-word-aux">再次输入</div>
                </div>
                <p class="text-center"style="color:red;" > @Html.ValidationSummary(false)</p>

                <div class="layui-form-item">
                    <div class="layui-input-block">
                        <button class="layui-btn" lay-submit lay-filter="formDemo">立即提交</button>
                        <button type="reset" class="layui-btn layui-btn-primary">重置</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
