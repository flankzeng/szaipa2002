@{
    ViewBag.Title = "后台综合";
    Layout = "~/Views/Shared/Staff_Layout.cshtml";
}

<style>
    .layui-col-md12 {
        padding: 0;
    }

    legend {
        font-size: 2rem;
    }

    .layui-text h3 {
        font-size: 1.8rem;
    }

    h4 {
        font-size: 1.5rem;
    }

    .layui-panel {
        height: 60vh;
    }
</style>

<div class="layui-row layui-col-space30">
    <div class="layui-col-md12">
        <div class="layui-row grid-demo">
            <div class="layui-col-md12">
                <div class="layui-panel">
                    <div style="padding:30px;">

                        <fieldset class="layui-field-title" style="margin-top: 10px;">
                            <legend>访问数据(近一个月访问量)</legend>
                        </fieldset>
                        <div id="main" style="margin:0 auto;width:80vw;height:38vh"></div>
                    </div>
                </div>
            </div>
            <div class="layui-col-md12">
                <div class="layui-col-md8">


                    <div class="layui-col-md12">
                        <div class="layui-col-md6">
                            <div class="layui-panel">
                                <div style="padding:30px;">
                                    <div style="width:100%;height:470px">
                                        <fieldset class="layui-field-title" style="margin-top: 10px;">
                                            <legend>上传数据</legend>
                                        </fieldset>
                                        <h4>共有0位会员的数据被编辑录入<small> 昨日新增了0位</small></h4>
                                        <h4>共有0家会员企业的数据被编辑录入<small> 昨日新增了0家</small></h4>
                                        <h4>共有上传了0副艺术家作品<small> 昨日上传了0副</small></h4>
                                        <h4>共有0条动态新闻 <small> 昨日编写了0条</small></h4>
                                    </div>
                                </div>


                            </div>
                        </div>
                        <div class="layui-col-md6">
                            <div class="layui-panel">
                                <div style="padding:30px;">
                                    <fieldset class="layui-field-title" style="margin-top: 10px;">
                                        <legend>访问项目</legend>
                                    </fieldset>
                                    <div id="main1" style="width:100%;height:400px"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="layui-col-md12">
                        <div class="layui-col-md6">
                            <div class="layui-panel">
                                <div style="padding:30px;">
                                    <fieldset class="layui-field-title" style="margin-top: 10px;">
                                        <legend>访问来自(本月)</legend>
                                    </fieldset>
                                    <div id="main2" style="width:100%;height:400px"></div>
                                </div>
                            </div>
                        </div>
                        <div class="layui-col-md6">
                            <div class="layui-panel">
                                <div style="padding:30px;">
                                    <fieldset class="layui-field-title" style="margin-top: 10px;">
                                        <legend>访问来自(今年)</legend>
                                    </fieldset>
                                    <div id="main3" style="width:100%;height:400px"></div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="layui-col-md4">
                    <div class="layui-panel">
                        <div style="padding:30px;">
                            <div style="width:100%;min-height:470px">
                                <fieldset class="layui-field-title" style="margin-top: 10px;">
                                    <legend>近期操作记录</legend>
                                </fieldset>
                                <div class="layui-row layui-col-space5">
                                    <div class="layui-col-md10">
                                        <ul class="layui-timeline">
                                            @foreach (var o in Model)
                                            {
                                                <li class="layui-timeline-item">
                                                    <i class="layui-icon layui-timeline-axis">&#xe63f;</i>
                                                    <div class="layui-timeline-content layui-text">
                                                        <h3 class="layui-timeline-title">@o.date</h3>
                                                        <p style="font-size: 1.4rem;">
                                                            @foreach (var item in o.or)
                {
                    @item <br />
                }
                                                        </p>

                                                    </div>
                                                </li>
                                            }
                                            <li class="layui-timeline-item">
                                                <i
                                                    class="layui-icon layui-anim layui-anim-rotate layui-anim-loop layui-timeline-axis"></i>
                                                <div class="layui-timeline-content layui-text">
                                                    <div class="layui-timeline-title">更新中！</div>
                                                </div>
                                            </li>
                                        </ul>
                                    </div>
                                    <div class="layui-col-md2">
                                        <div id="slideTest12" style="margin: 45px 30px; display: inline-block;"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<script>



    var chartDom = document.getElementById('main');
    var myChart = echarts.init(chartDom);
    var option;
    option = {
        tooltip: {
            trigger: 'axis',
            axisPointer: {            // 坐标轴指示器，坐标轴触发有效
                type: 'shadow'        // 默认为直线，可选为：'line' | 'shadow'
            }
        },
        grid: {
            left: '3%',
            right: '4%',
            bottom: '3%',
            containLabel: true
        },
        xAxis: [
            {
                type: 'category',
                data: [],
                axisTick: {
                    alignWithLabel: true
                }
            }
        ],
        yAxis: [
            {
                type: 'value'
            }
        ],
        series: [
            {
                name: '当日访问数',
                type: 'line',
                barWidth: '60%',
                data: []
            }
        ]
    };
    myChart.showLoading();
    $.get('/Staff/DayVisityCount').done(function (data) {
        myChart.hideLoading();
        myChart.setOption({
            xAxis: {
                data: data.category
            },
            series: {
                name: '当日访问数',
                data: data.data
            }
        });
    })
    option && myChart.setOption(option);


    var chartDom1 = document.getElementById('main1');
