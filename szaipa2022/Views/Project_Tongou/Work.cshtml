@model szaipa2022.Models.TongouWorks
@{
    Layout = null;
}

@* 作品展示页面 *@

<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=yes">
    <title> @Model.AtristidName 作品 - @Model.Title</title>
    @* （姓名）作品 - （作品名称） *@
    <script src="/Content/js/jquery-2.1.4.min.js"></script>
    <link href="~/Content/Model/css/Site.css" rel="stylesheet" />
    <link rel="icon" href="~/Content/123/szaipa.ico" type="image/x-icon" />
</head>


<body>

    <!-- 点击后的大图 -->
    <div class="datu">
        <img src="@Model.ImgPath" class="zhanshi0">
    </div>

    <!-- 默认展示图 -->
    <div class="imgCon" >
        <img class="zhanshi" src="@Model.ImgPath" alt="@Model.Title" />
        <div class="remind">查看细节</div>
    </div>

    <div class="text">
        @* h1:（姓名）作品 *@
        @* h1<br />：（作品名称） *@
        <h1>
            @Model.AtristidName 作品<br />
            @Model.Title
        </h1>

        <h4>
            <!-- P标签内容不变，冒号以后的需要相对应数据 -->
            @if (Model.CreationDate != null)
            {
                <p>创作年份：@Model.CreationDate<br /></p>
            }
          @if (Model.Type != null)
          {
            <p>类&#12288;&#12288;型：@Model.Type<br /></p>
          }
          @if (Model.Size != null)
          {
            <p>尺&#12288;&#12288;寸：<span style="letter-spacing: 0.05em;">@Model.Size</span><br /></p>
          }
          
           @* <p>价&#12288;&#12288;格：</p><span style="letter-spacing: 0.05em;">¥9999</span><br /> *@
        </h4>
    </div>

    <!-- 简介以及入群方式 -->

    <div class="newpage">
        <a href="/Project_Tongou/Atrist/@Model.Atristid">
            @* Artist单独页面 *@
            <p class="block">艺术家简介</p>
            <p class="tubiao"> ></p>
        </a>


    </div>



    <script>
        $(function () {
            var zhanshi = $(".zhanshi");
            var datu = $(".datu");
            zhanshi.click(function () { //全屏图片功能
                datu.css("display", "block");
            });

            datu.click(function () {
                datu.css("display", "none")
            })
        });

        function None() {
            pushHistory();
            window.addEventListener("popstate", function (e) {
                WeixinJSBridge.invoke('closeWindow', {}, function (res) { });
            }, false);

            function pushHistory() {
                var state = {
                    title: "title",
                    url: "#"
                };
                window.history.pushState(state, "title", "#");
            }
        };
    </script>


    <style>
        /* 小图展示区 */

.newpage a{
color:black!important;
}

        .imgCon {
            width: 100%;
            position: relative;
        }

            .imgCon img {
                max-height: 100vh;
                width: inherit;
                object-fit: cover;
                align-content: center;
                object-position: center;
            }
            .imgCon:hover {
            cursor:pointer;
            }

        /* 放大功能提示 */
        .remind {
            font-family: 'sansLight';
            text-align: center;
            line-height: 30px;
            position: absolute;
            bottom: 5%;
            right: 3%;
            width: 150px;
            height: 30px;
            color: white;
            background-color: #00000061;
            border-radius: 10px;
        }

        /* 大图展示区 */
        .datu {
            width: 100%;
            height: 100%;
            background-color: #000000db;
            z-index: 3;
            position: fixed;
            overflow: auto;
            display: none;
            cursor: pointer;
        }

        .zhanshi0 {
            max-height: 100vh;
            width: 100%;
            padding-top: 30%;
            object-fit: cover;
            align-content: center;
            object-position: center;
        }

        /* h1为作品作者名称 */
        .text h1 {
            font-family: 'sansBold';
            font-size: 24pt;
            color: #1a4eb5;
            margin-top: 30px;
        }

        /* text为详细介绍 */
        .text {
            padding: 0 5% 0 5%;
            height: auto;
            font-size: 16pt;
            display: block;
        }

            .text p {
                font-family: 'sansRegular';
                display: inline;
            }

            .text h4 {
                font-family: 'sansExtraLight';
                font-weight: unset;
                line-height: 32pt;
            }

        /* 简介以及入群方式 */

        .newpage {
            width: 100%;
            height: 203px;
            background-color: #f5f5f3;
            cursor: pointer;
            margin: 80px 0 0 0;
        }

            .newpage p {
                margin: 0;
            }

        .block {
            font-family: 'sansRegular';
            font-size: 14pt;
            text-indent: 2em;
            line-height: 100px;
            height: 100px;
            width: 80%;
            float: left;
            background-color: #f5f5f3;
        }

        .tubiao {
            height: 100px;
            width: 19%;
            line-height: 100px;
            font-family: 'sansRegular';
            font-size: 14pt;
            text-indent: 2em;
            float: right;
            background-color: #f5f5f3;
        }

        .hr {
            height: 3px;
            width: 100%;
            background-color: #ecedea;
            float: left;
        }
    </style>

</body>

</html>
